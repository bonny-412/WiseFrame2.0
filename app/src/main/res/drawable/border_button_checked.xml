<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <gradient
                android:angle="360"
                android:type="linear"
                android:startColor="@color/colorStartGradient"
                android:endColor="@color/colorEndGradient"
                />
            <corners android:topLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>

    <item android:bottom="2dp" android:top="2dp" >
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <gradient
                android:angle="180"
                android:type="linear"
                android:startColor="@color/colorStartGradient"
                android:endColor="@color/colorEndGradient"
                />
            <padding android:left="8dp" android:right="8dp"
                android:top="8dp" android:bottom="8dp" />
            <corners android:topLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>