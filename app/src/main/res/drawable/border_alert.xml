<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fafafa"/>
            <gradient
                android:angle="180"
                android:type="linear"
                android:startColor="@color/colorStartGradient"
                android:endColor="@color/colorEndGradient"
                />
            <corners android:topLeftRadius="40dp" android:bottomRightRadius="40dp"/>
        </shape>
    </item>

    <item android:bottom="2dp" android:top="2dp" android:right="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fafafa"/>
            <corners android:topLeftRadius="40dp" android:bottomRightRadius="40dp"/>
            <padding android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

</layer-list>